<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/THEME_BROWN"
    android:paddingBottom="@dimen/gapx0.75"
    android:paddingLeft="@dimen/gapx0.5"
    android:paddingRight="@dimen/gapx0.5"
    android:paddingTop="@dimen/gapx0.5"
    tools:context="com.mars.snickers.Frament_InitialScreen">

    <ScrollView
        android:layout_above="@+id/fis_btn_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/fis_iv_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mirror_animation_list"
                android:padding="@dimen/gap" />


            <TextView
                android:id="@+id/fis_tv_playgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fis_iv_mirror"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/gapx0.75"
                android:text="@string/playTheGameAndFindOut"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textScaleX="1.2"
                android:textSize="@dimen/gap"
                android:textStyle="bold" />



        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/fis_btn_reveal"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_revealhungryme"
        android:text="@string/revealhungryme"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/THEME_BROWN"
        android:textScaleX="1.3"
        android:textStyle="bold" />


</RelativeLayout>
