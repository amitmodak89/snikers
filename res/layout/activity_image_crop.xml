<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/THEME_BROWN" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/aic_ll_bottomBar"
        android:layout_centerInParent="true" >

        <com.edmodo.cropper.CropImageView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CropImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rotation="0" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/aic_ll_bottomBar"
        style="@style/button_state_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/THEME_DARK_BROWN" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/AMIT_THEME_BROWN_BG"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/aic_btn_reset"
                style="@style/button_state_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/reset"
                android:paddingTop="@dimen/gapx0.5"
                android:text="@string/reset" />

            <Button
                android:id="@+id/aic_btn_submitcrop"
                style="@style/button_state_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/done"
                android:paddingTop="@dimen/gapx0.5"
                android:text="@string/done" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>